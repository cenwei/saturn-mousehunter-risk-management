# Risk Management Service Environment Configuration
# 风控管理微服务环境配置

# Database Configuration
RISK_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/saturn_mousehunter

# Application Configuration
RISK_ENVIRONMENT=development
RISK_DEBUG=true
RISK_HOST=0.0.0.0
RISK_PORT=8003

# JWT Configuration (from auth service)
RISK_JWT_SECRET_KEY=your-secret-key-here-change-in-production-very-important-long-secret
RISK_JWT_ALGORITHM=HS256

# Logging Configuration
RISK_LOG_LEVEL=INFO
RISK_LOG_FORMAT=json

# CORS Configuration
RISK_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://192.168.8.168:3000", "http://192.168.8.168:8080"]
RISK_CORS_ALLOW_CREDENTIALS=true
RISK_CORS_ALLOW_METHODS=["*"]
RISK_CORS_ALLOW_HEADERS=["*"]

# Redis Configuration (optional)
# RISK_REDIS_URL=redis://localhost:6379/1

# Risk Management Business Configuration
RISK_MAX_POSITION_LIMIT=1000000.0
RISK_MAX_DAILY_LOSS_LIMIT=50000.0
RISK_MAX_DRAWDOWN_LIMIT=0.1
RISK_VAR_CONFIDENCE_LEVEL=0.95

# Monitoring Configuration
RISK_REAL_TIME_CHECK_INTERVAL=60
RISK_INTRADAY_CHECK_INTERVAL=300
RISK_EOD_CHECK_TIME=16:00

# Alert Configuration
RISK_ALERT_EMAIL_ENABLED=true
RISK_ALERT_SMS_ENABLED=false
# RISK_ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# Metrics Configuration
RISK_ENABLE_METRICS=true
RISK_METRICS_PORT=9003

# External Services Configuration
AUTH_SERVICE_URL=http://192.168.8.168:8001
STRATEGY_SERVICE_URL=http://192.168.8.168:8002
ACCOUNT_SERVICE_URL=http://192.168.8.168:8004